{
	"editor.renderWhitespace": "all",
	"editor.fontFamily": "SourceHanCodeJP-Regular",
	"window.openFilesInNewWindow": "off",
	"editor.scrollBeyondLastLine": true,
	"editor.wordSeparators": "./\\()\"'-:,.;<>~!@#$%^&*|+=[]{}`~?、。「」【】『』（）！？　てにをはがのともへでや",
	"editor.wordWrap": "on",
	"editor.formatOnPaste": true,
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.snippetSuggestions": "top",
	"workbench.colorTheme": "Azurish",
	"editor.stablePeek": true,
	"[javascript]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
		"editor.autoIndent": false,
		"editor.formatOnSave": true
	},
	"[typescript]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
		"editor.autoIndent": false,
		"editor.formatOnSave": true
	},
	"[json]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
		"editor.autoIndent": false,
		"editor.formatOnSave": true
	},
	"[vue]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
		"editor.autoIndent": false,
		"editor.formatOnSave": true
	},
	"[go]": {
		"editor.insertSpaces": false,
		"editor.tabSize": 4,
		"editor.autoIndent": false,
		"editor.formatOnSave": true
	},
	"[perl]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 4,
		"editor.autoIndent": false
	},
	"[python]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
		"editor.autoIndent": false
	},
	"[lua]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 4,
		"editor.autoIndent": false
	},
	"[php]": {
		"editor.insertSpaces": false,
		"editor.tabSize": 4,
		"editor.autoIndent": false,
		// "editor.formatOnSave": true
	},
	// JavaScript settings
	"eslint.enable": true,
	"eslint.autoFixOnSave": true,
	"emmet.showSuggestionsAsSnippets": true,
	// "prettier.eslintIntegration": true,
	// "prettier.printWidth": 100,
	// "editor.formatOnSave": true,
	"eslint.validate": [
		"javascript",
		"typescript",
		{
			"language": "vue",
			"autoFix": true
		}
	],

	// PHP settings
	"php.executablePath": "/usr/local/opt/php@7.2/bin/php",
	"php.suggest.basic": false,
	"php.validate.enable": true,
	"php.validate.executablePath": "/usr/local/opt/php@7.2/bin/php",
	"php.validate.run": "onSave",
	"phpcs.standard": "PSR2",
	"phpcs.executablePath": "/Users/takeyu/.composer/vendor/bin/phpcs",
	"phpcs.autoConfigSearch": true,
	"symfony-vscode.detectCwd": false,
	"symfony-vscode.phpPath": "docker exec 8170490678e8 /bin/sh -c 'cd /var/www/project && /usr/local/bin/php \"$@\"' -- ",
	"emeraldwalk.runonsave": {
		"commands": [
			{
				"match": "\\.php$",
				"cmd": "prettier ${file} --write"
			}
		]
	},
	"window.zoomLevel": 0,
	"editor.fontSize": 11,
	"breadcrumbs.enabled": true
}
